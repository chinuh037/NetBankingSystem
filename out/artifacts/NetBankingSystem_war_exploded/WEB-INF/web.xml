<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>loginPackage.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PayController</servlet-name>
        <servlet-class>PayPackage.PayController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PayController</servlet-name>
        <url-pattern>/paycontroller</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PayOptions</servlet-name>
        <servlet-class>PayPackage.PayOptions</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PayOptions</servlet-name>
        <url-pattern>/payoptions</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>depositUser</servlet-name>
        <servlet-class>PayPackage.depositUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>depositUser</servlet-name>
        <url-pattern>/depositUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>withdrawUser</servlet-name>
        <servlet-class>PayPackage.withdrawUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>withdrawUser</servlet-name>
        <url-pattern>/withdrawUser</url-pattern>
    </servlet-mapping>
</web-app>